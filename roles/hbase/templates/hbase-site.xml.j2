<configuration>
    <property>
        <name>hbase.cluster.distributed</name>
        <value>true</value>
    </property>
    <property>
        <name>hbase.rootdir</name>
        <value>hdfs://{{ groups["hadoop"][0] }}:9000/hbase</value>
    </property>
    ​<property>
        ​<name>hbase.zookeeper.property.clientPort</name>
        ​<value>2181</value>
    ​</property>
    ​<property>
        ​<name>hbase.zookeeper.quorum</name>
        ​<value>{{ groups["zookeeper"] | join(',') }}</value>
    ​</property>
    ​<property>
        ​<name>hbase.zookeeper.property.dataDir</name>
        ​<value>/var/lib/zookeeper</value>
    ​</property>
</configuration>
