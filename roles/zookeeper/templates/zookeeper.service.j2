[Unit]
Description=ZooKeeper Service
Documentation=http://zookeeper.apache.org
Requires=network.target
After=network.target

[Service]
User=zookeeper
Group=zookeeper
ExecStart=/opt/{{ zookeeper_version }}/bin/zkServer.sh start-foreground /opt/{{ zookeeper_version }}/conf/zookeeper.conf
ExecStop=/opt/{{ zookeeper_version }}/bin/zkServer.sh stop /opt/{{ zookeeper_version }}/conf/zookeeper.conf
ExecReload=/opt/{{ zookeeper_version }}/bin/zkServer.sh restart /opt/{{ zookeeper_version }}/conf/zookeeper.conf
WorkingDirectory=/var/lib/zookeeper

[Install]
WantedBy=default.target